<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/breakfastTextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Breakfast"
                android:layout_marginVertical="2dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:id="@+id/iconsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="0.4">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/like_heart"
                    android:layout_marginHorizontal="5dp"
                    android:padding="5dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/like_heart"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/breakfatLinearView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/breakfastTextView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/breakfastImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/cook"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/breakfastName"
                android:layout_below="@+id/breakfastImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lunchLinearView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/breakfatLinearView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lunch"
                android:layout_marginVertical="2dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:id="@+id/lunchIconsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="0.4">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/like_heart"
                    android:layout_marginHorizontal="5dp"
                    android:padding="5dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/like_heart"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lunchLinearImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lunchLinearView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lunchImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/cook"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/lunchName"
                android:layout_below="@+id/breakfastImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/supperLinearTextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lunchLinearImageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Supper"
                android:layout_marginVertical="2dp"
                android:textSize="20sp"
                android:layout_marginHorizontal="10dp"/>

            <LinearLayout
                android:id="@+id/supperIconsLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_weight="0.4">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/like_heart"
                    android:layout_marginHorizontal="5dp"
                    android:padding="5dp"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/like_heart"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/supperLinearView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/supperLinearTextView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/supperImageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/cook"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/supperName"
                android:layout_below="@+id/breakfastImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>