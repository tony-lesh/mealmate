<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/recipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_weight="0.4">


        <androidx.cardview.widget.CardView
            android:id="@+id/recipeCardView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            tools:layout_editor_absoluteX="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="end"
                android:background="@color/blue4"
                android:padding="3dp">

                <ImageButton
                    android:id="@+id/recipeAddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_store_cart"/>
                <ImageView
                    android:id="@+id/recipeRate"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/star"/>
                <ImageButton
                    android:id="@+id/recipeLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/rec1" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recipeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeLayout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_weight="0.4">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipeLayout"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp">
            <TextView
                android:id="@+id/recipeName"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="@string/pasta_green_salad"/>

            <TextView
                android:id="@+id/recipePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="BWP 0.00"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>